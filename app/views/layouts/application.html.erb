<!DOCTYPE html>
<html>
<head>
  <title>Happypets</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'json2' %>
  <%= csrf_meta_tag %>
</head>
<body>
  <a href="/"><img src="/images/HappyPets_logo.png" /></a>
  <div id="user_nav">
    <% if current_user %>
      <%= link_to "Edit Profile", edit_user_path(:current) %>
      <%= link_to "Logout", logout_url %>
      <% if current_user.unread_notifications.size > 0 %>
        <%= link_to 'Unread Notifications', '/notifications' %>
      <% else %>
        <%= link_to 'Notifications', '/notifications' %>
      <% end %>
    <% else %>
      <%= link_to "Register", new_user_path %>
      <%= link_to "Login", login_path %>
    <% end %>
    <input type="text" id="searchbox" />
    <input type="button" value="Search" onclick="search();" />
    <% if current_user %>
      <input type="button" value="Recommend" onclick="recommend();" align="right" />
    <% end %>
  </div>
<%= yield %>

</body>
</html>
