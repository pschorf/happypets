<!DOCTYPE html>
<html>
<head>
  <title>Happypets</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="user_nav">
    <% if current_user %>
      <%= link_to "Edit Profile", edit_user_path(:current) %>
      <%= link_to "Logout", logout_url %>
    <% else %>
      <%= link_to "Register", new_user_path %>
      <%= link_to "Login", login_path %>
    <% end %>
  </div>
<%= yield %>

</body>
</html>
