<h1>Listing pets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Gender</th>
    <th>Age</th>
    <th>Animal</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.name %></td>
    <td><%= pet.gender %></td>
    <td><%= pet.age %></td>
    <td><%= pet.animal %></td>
    <td><%= pet.user %></td>
    <td><%= link_to 'Show', pet %></td>
    <% if current_user == pet.user %>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pet', new_pet_path %>
